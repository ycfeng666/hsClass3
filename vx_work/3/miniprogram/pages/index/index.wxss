.box1 {
  height: 50px;
  line-height: 50px;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.left {
  width: 30%;
  display: flex;
  flex-direction: column;
  margin: 2px;
  border-right: 2px solid #1AAD19;
}

.right {
  width: 70%;
  display: flex;
  flex-direction: column;
  margin: 2px;
}

.text-center {
  text-align: center;
}
.box2,.box3{
  margin-top: 20px;
}
.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper-image {
  height: 100%;
  width: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
}

.pageView {
  width: 100%;
}
movable-area {
  height: 400rpx;
  width: 400rpx;
  margin: 30rpx;
  background-color: #ccc;
  overflow: hidden;
}
movable-view {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  width: 100rpx;
  background: #1AAD19;
  color: #fff;
}
